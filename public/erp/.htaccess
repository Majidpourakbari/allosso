<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_FILENAME} !-f

  # Rewrite for player.php?id=1 to player/1
  RewriteRule ^player/([^/]+)$ player.php?id=$1 [NC,L]

  # Remove .php extension for other pages
  RewriteRule ^([^\.]+)$ $1.php [NC,L]
</IfModule>

